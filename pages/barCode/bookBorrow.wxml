<!--pages/barCode/bookBorrrow.wxml-->
<block wx:if="{{status==1}}">
  <form bindsubmit="formSubmit1" bindreset="formReset">
    <view class="view1">
      <view class="textAll">唯一编码:</view>
      <view class="classname" style="display:inline; margin-left:20rpx;">{{id}}</view>
    </view>
    <view class="view1" hidden='{{hiddens}}'>
      <text class="textAll">地址：</text>
      <!--  <input class="className" placeholder="请输入地址" bindinput="bindAdd" />-->
      <view class="classname" style="display:inline; margin-left:20rpx;">{{address}}</view>
    </view>
    <view class="view1" hidden='{{hiddens}}'>
      <view class="textAll">书名：</view>
      <input name="createdBy" placeholder="请输入书名" class="className" maxlength="20" type="text" bindinput="bindBookname" />
    </view>
    <view class="view1">
      <text class="textAll">借阅人：</text>
      <input class="className" placeholder="请输入借阅人姓名" bindinput="bindBorrowname" />
    </view>

    <view class="okView">
      <button formType="submit" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" hover-class="other-button-hover" class="okBtn">确认借阅</button>
    </view>

    <view style="height:50rpx;"></view>
  </form>
</block>

<block wx:elif="{{status==2}}">
  <form bindsubmit="formSubmit2" bindreset="formReset">
    <view class="view1">
      <view class="textAll">唯一编码:</view>
      <view class="classname" style="display:inline; margin-left:20rpx;">{{id}}</view>
    </view>
    <view class="view1">
      <text class="textAll">借阅人：</text>
      <view class="classname" style="display:inline; margin-left:20rpx;">{{borrownameR}}</view>
    </view>
    <view class="okView">
      <button formType="submit" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" hover-class="other-button-hover" class="okBtn">确认还书</button>
    </view>

    <view style="height:50rpx;"></view>
  </form>
</block>

<block wx:elif="{{status==3}}">
  <form bindsubmit="formSubmit3" bindreset="formReset">
    <view class="view1">
      <view class="textAll">唯一编码:</view>
      <view class="classname" style="display:inline; margin-left:20rpx;">{{id}}</view>
    </view>
    <view class="view1">
      <text class="textAll">地址：</text>
      <!--<input class="className" placeholder="请输入地址" bindinput="bindAdd" />-->
      <view class="classname" style="display:inline; margin-left:20rpx;">{{address}}</view>
    </view>
    <view class="view1">
      <view class="textAll">书名：</view>
      <input name="createdBy" placeholder="请输入书名" class="className" maxlength="20" type="text" bindinput="bindBookname" />
    </view>
    
    <view class="okView">
      <button formType="submit" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" hover-class="other-button-hover" class="okBtn">确认添加</button>
    </view>

    <view style="height:50rpx;"></view>
  </form>
</block>

<block wx:else>
  <view class="btnR">
    <view class="list" bindtap="searchCode">编码查询</view>
    <view class="submits">书名查询</view>
  </view>

  <block hidden="{{SNClicked}}">
    <form bindsubmit="formSubmit4" bindreset="formReset">
      <view class="searchView">
        <view class="searchView1">
          <image src="http://yzschool.com.cn/images/weiCode/search.png"></image>
          <input bindinput="bindBooknames" class="searchInput" name="classLevel" placeholder="请输入书名进行搜索" auto-focus='true' />
          <button formType="submit" class="searchBtn">搜索</button>
        </view>
      </view>
    </form>
  </block>

  <block wx:if="{{itemStatus==1}}">
    <view wx:for="{{item}}" wx:for-index='key' class='classItem'>
      <view class="view1s">
        <text class="textAll">唯一编码：</text>
        <text class="className">{{item.id}}</text>
      </view>
      <view class="view1s">
        <text class="textAll">书名：</text>
        <text class="className">{{item.bookname}}</text>
      </view>
      <view class="view1s">
        <text class="textAll">借阅人：</text>
        <text class="className">{{item.borrowname}}</text>
      </view>
      <view class="view1s">
        <text class="textAll">地址：</text>
        <text class="className">{{item.location}}</text>
      </view>
      <view class="deletes" bindtap="clickedDelete" id="{{key}}">
        <image src="http://yzschool.com.cn/images/weiCode/delete_box.png"></image>
      </view>
    </view>
  </block>
  <block wx:else>
  </block>



</block>
