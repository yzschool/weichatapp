<!--barCode.wxml-->
<view>
  <view class="show-view" bindtap="bindBorrow">
    <label class="empty-span"></label>
    <image class="cover-thumb" src="{{'../../image/borrow.png'}}"></image>
    <label class="nickname">{{ '我要借书' }}</label>
    <label class="ico-moon icon-rightarrow"></label>
  </view>
</view>
<view>
  <view class="show-view" bindtap="bindBack">
    <label class="empty-span"></label>
    <image class="cover-thumb" src="{{'../../image/return.png'}}"></image>
    <label class="nickname">{{ '我要还书' }}</label>
    <label class="ico-moon icon-rightarrow"></label>
  </view>
</view>
<view>
  <view class="show-view" bindtap="bindAdd">
    <label class="empty-span"></label>
    <image class="cover-thumb" src="{{'../../image/addBook.png'}}"></image>
    <label class="nickname">{{ '添加书目' }}</label>
    <label class="ico-moon icon-rightarrow"></label>
  </view>
</view>
<view>
  <view class="show-view" bindtap="bindSearch" >
    <label class="empty-span"></label>
    <image class="cover-thumb" src="{{'../../image/search.png'}}"></image>
    <label class="nickname">{{ '查找/删除' }}</label>
    <label class="ico-moon icon-rightarrow"></label>
  </view>
</view>
