/* info.wxss */
.headView{
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #000000;
}
.content{
  width: 100%;
  display: block;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #6d6d6d;
}
.imageView{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.img{
  width: 32.5%;
  float: left;
}

.img image{
  width: 100%;
  height: 230rpx;
}
.titleImg{
  background-color: #808080;
  color: white;
  height: 40rpx;
  font-size: 30rpx;
  width:100%;
  text-align: center;
  border-top: 4px solid rgba(59, 33, 10, 0.2);
}